<% provide(:title, "#{@search.phrase}") %>

<%= "Found #{@search.results.count} hits for the phrase \"#{@search.phrase}\" in
 #{@search.transcript_count} transcripts." %> <br>

<% if @limited %>
  <%= "Showing the first 50 results;" %>
  <%= link_to "download CSV", download_search_path(id: @search.id) %>
  <%= "for all results." %>
<% else %>
  <%= link_to "Download CSV", download_search_path(id: @search.id) %>
<% end %>

<table class='table table-striped table table-condensed'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Paragraph</th>
      <th>Links</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.title %></td>
        <td><%= result.paragraph %></td>
        <td>
          <%= link_to 'Story', result.url_link, target: '_blank' %>|
          <%= link_to 'MP3', result.audio_link, target: '_blank'%>|
          <%= link_to 'XML', download_transcript_path(id: get_transcript_id(result)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
